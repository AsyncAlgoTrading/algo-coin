{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "target": "es2016",
    "outDir": "./build",
    "lib": [
      "es2016",
      "es2015.promise",
      "dom"
    ],
   "types": [
      "jest"
    ]
  },
  "include": ["src/ts/*"]
}